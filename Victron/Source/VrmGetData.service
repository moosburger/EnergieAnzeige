###########################################################
#   dietPi Startup
#   English:    https://wiki.debian.org/systemd/Services
#   Deutsch:    https://manpages.debian.org/buster/manpages-de/systemd.service.5.de.html
#
#   Datei nach /etc/systemd/system/VrmGetData.service
#
#   Berechtigungen setzen
#   sudo chmod 644 /etc/systemd/system/VrmGetData.service
#
#   systemd informieren den Process beim Bootup zu starten
#   sudo systemctl daemon-reload
#   und
#   sudo systemctl enable VrmGetData.service
#
#   systemctl start VrmGetData.service
#   systemctl stop VrmGetData.service
#
###########################################################

[Unit]
Description=Collecting Data from Victron mqtt broker
After=multi-user.target

[Service]
Type=simple
RestartSec=30
Restart=on-failure
ExecStart=/usr/bin/python /mnt/dietpi_userdata/EnergieAnzeige/VrmGetData.py

[Install]
WantedBy=multi-user.target